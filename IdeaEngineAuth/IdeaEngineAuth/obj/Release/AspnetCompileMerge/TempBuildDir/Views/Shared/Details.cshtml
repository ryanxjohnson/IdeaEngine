@model HasPermissions

@{
    ViewBag.Title = "Details";
}

@Html.Partial("_Details")

<div class="form-actions no-color" style="text-align:center;" align="center" >
    <p>
        @if (Model.CanViewList())
        {
            @Html.ActionLink("Back", "Index", new { }, htmlAttributes: new { @class = "btn btn-default", @style = "color:black" })@:
        }
        @if (Model.CanEdit())
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "btn btn-default", @style = "color:black" })@: 
        }
        @if (Model.CanDelete())
        {
            @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, htmlAttributes: new { @class = "btn btn-danger", @style = "color:black;" })@: 
        }
    </p>
</div>